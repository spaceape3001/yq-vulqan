layout(binding = 2) uniform sampler2D heightSampler;

float uvZ(vec2 uv)
{
    return texture(heightSampler, uv).x;
}

vec4    uv2screenZ(vec2 uv)
{
    return uv2screen(uv, uvZ(uv));
}

