vec2  qmix(vec2 a1, vec2 a2, vec2 b1, vec2 b2, float f, float g)
{
    return 
        (1.-f)*(1.-g)*a1 + (1.-f)* g * a2 + f * (1.-g) * b1 + f * g * b2;
}
