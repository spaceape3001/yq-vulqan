vec3  qmix(vec3 a1, vec3 a2, vec3 b1, vec3 b2, float f, float g)
{
    return 
        (1.-f)*(1.-g)*a1 + (1.-f)* g * a2 + f * (1.-g) * b1 + f * g * b2;
}

