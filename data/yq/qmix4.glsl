vec4  qmix(vec4 a1, vec4 a2, vec4 b1, vec4 b2, float f, float g)
{
    return 
        (1.-f)*(1.-g)*a1 + (1.-f)* g * a2 + f * (1.-g) * b1 + f * g * b2;
}

